mixin paginationArrowButton(isForward = false)
  .pagination__nav(class!= attributes.class)
    <svg width="5" height="7" viewBox="0 0 5 7" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M2.936 6.392L0.176 3.668L2.936 0.944H4.664L1.892 3.668L4.664 6.392H2.936Z" fill="#404B52"/>
    </svg>


mixin pagination(options)
  -const {min, max} = options || {};
  .pagination(class!= attributes.class)
    +paginationArrowButton()(class="pagination__back") 
    - for (var x = 1; x<=min; x++) 
      .pagination__nav= x
    if min < max 
      span.pagination__dots ...
    .pagination__nav= max
    +paginationArrowButton()(class="pagination__forward") 

  
